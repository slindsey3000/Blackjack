<%# Card partial - displays a single playing card %>
<%# locals: card (Card object), face_down (boolean) %>

<% if local_assigns[:face_down] && face_down %>
  <div class="w-16 h-24 md:w-20 md:h-28 bg-gradient-to-br from-blue-800 to-blue-900 rounded-lg shadow-lg border-2 border-blue-700 flex items-center justify-center">
    <div class="text-blue-400 text-2xl">â™¦</div>
  </div>
<% else %>
  <% is_red = card.color == "red" %>
  <div class="w-16 h-24 md:w-20 md:h-28 bg-white rounded-lg shadow-lg border border-gray-300 p-1 flex flex-col justify-between <%= is_red ? 'text-red-600' : 'text-gray-900' %>">
    <div class="text-left">
      <div class="text-sm md:text-base font-bold leading-none"><%= card.rank %></div>
      <div class="text-xs md:text-sm"><%= card.suit_symbol %></div>
    </div>
    <div class="text-center text-2xl md:text-3xl">
      <%= card.suit_symbol %>
    </div>
    <div class="text-right transform rotate-180">
      <div class="text-sm md:text-base font-bold leading-none"><%= card.rank %></div>
      <div class="text-xs md:text-sm"><%= card.suit_symbol %></div>
    </div>
  </div>
<% end %>
